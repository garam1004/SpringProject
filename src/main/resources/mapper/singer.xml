<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
   
  <mapper namespace="mapper.singer">
  
  	<resultMap type="singercontentVO" id="singerResult">
   		<result property="id" column="id" />
   	</resultMap>
   	
   	
   	<select id="mainContent" resultType="singercontentVO">
   	<![CDATA[
		select introduce from singercontent where id = #{id}
		]]> 
   	</select>  
   	  
   	<insert id="ContentWrite" parameterType="singercontentVO">
   		<![CDATA[
		insert into singercontent (id, introduce, date) values (#{id}, #{introduce}, now())
		]]>
   	</insert>
   	
  	
  </mapper> 